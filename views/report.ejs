<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/style.css" />
    <title>Real Assist Report</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  </head>
  <body>
    <main>
    <header class="header">
      <div>
        <div class="logo">
          <img src="images/logo.svg" alt="logo" />
        </div>
        <p class="address">123 Main Street, Dover, NH 03820-4667</p>
      </div>
      <hr>
    </header>
      <div class="card-item" id="card1">
        <div class="card-head"></div>
        <div class="chart-component">
          <div class="chart">
            
          </div>
        </div>
      </div>
      <div class="card-item" id="card2">
        <div class="card-head"></div>
        <div class="chart-component">
          <div class="chart">
          </div>
        </div>
      </div>
      <div class="card-item" id="card3">
        <div class="card-head"></div>
        <div class="chart-component">
          <div class="chart">
          </div>
        </div>
      </div>
    <div class="card-item">
      <div class="card-detail">
        <div>
          <img src="images/location.png" alt="location">
        </div>
        <p>Crime</p>
        <div class="line"></div>
      </div>
      <div class="card">
        <div class="card-head"><p>Burglary</p></div>
        <div class="chart-component">
          <span>Arrests</span>
          <div class="chart">
            <canvas id="chart"></canvas>
          </div>
        </div>
      </div>
    </div>
    <footer>
      <hr>
      <div>
        <div>
        <p class="footer-title">Report Genereted on September 26, 2023</p>
        </div>
        <div>
        <p class="footer-detail">RealAssist Property Report | Page 1 <span>of 25</span> </p>
        </div>
      </div>
    </footer>
    </div>
    </main>


    <script>
      var chartData = <%- chartData %>;
      var ctx = document.getElementById("chart").getContext("2d");

      var myLineChart = new Chart(ctx, {
        type: "line",
        data: chartData,
        options: {
           plugins: {
           legend: {
              display: false
            }
          },
          scales: {
            yAxes: [{
              gridLines: {
                display:false
              }   
            }], 
            y: {
            min: 0,
            ticks: {
                stepSize: 25
            }
        }
          },
          responsive: true,
          maintainAspectRatio: false,
        },
      });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>
